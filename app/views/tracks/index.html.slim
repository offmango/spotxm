div#channel_results

	h2 = link_to "Channels", channels_path

	- if flash[:channel_alert]
		p.alert
			= flash[:channel_alert]

	= render :partial => "shared/channel", :collection => @channels

div#track_results

	h2 Tracks

	- if flash[:track_alert]
		p.alert
			= flash[:track_alert]

	- if @tracks.present?
		= paginate @tracks

		table#track_listing
			thead
				tr
					th Track
					th Artist
					th Album
					th Channel Number
					th Channel
					th Played At
			tbody
				- @tracks.each do |track|
					tr.track_info
						td 
							= track.track_name 
							= link_to image_tag('spotify.png', :size=> "16x16"), spotify_link("track", track), :target=>"_blank" if track.track_name.present?
						td
							= track.artist_name
							= link_to image_tag('spotify.png', :size=> "16x16"), spotify_link("artist", track), :target=>"_blank" if track.artist_name.present?
						td
							= track.album_name
							= link_to image_tag('spotify.png', :size=> "16x16"), spotify_link("album", track), :target=>"_blank" if track.album_name.present?
						td
							= link_to track.channel.channel_number, track.channel, :id => "channel_link_#{track.channel.channel_number}"
						td
							= link_to track.channel.channel_name, track.channel
						td
							= l track.played_at if track.played_at.present?