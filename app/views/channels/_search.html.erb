<%= form_for :channel, method: :get do |channel_form| %>
	<%= channel_form.label :channel_number, "Search for a channel" %>
	<%= channel_form.text_field :channel_number, :id => "channel-search", :placeholder => "Enter a channel number" %>
	<%= channel_form.submit 'Find Channel' %>
<% end %> 

OR

<%= form_for :track, :url => tracks_path, method: :get do |track_form| %>
	<%= track_form.label :track_params, "Search for a track" %>
	<%= track_form.text_field :track_params, :id => "track-search", :placeholder => "Enter your search term" %>
	<%= track_form.submit 'Find Track' %>
<% end %> 

